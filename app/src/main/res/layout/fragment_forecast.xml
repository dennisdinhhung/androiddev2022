        android:paddingBottom="7dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Wed"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/scattered_rain"/>

